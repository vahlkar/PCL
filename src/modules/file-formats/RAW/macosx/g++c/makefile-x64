.PHONY: post-build
post-build:
	cp $(OBJ_DIR)/RAW-pxm.dylib $(PCLBINDIR64C)
	codesign --deep --options=runtime -s pleiades -f -v --timestamp $(PCLBINDIR64C)/RAW-pxm.dylib

